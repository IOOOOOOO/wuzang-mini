
.video-item {
   margin-bottom: 10px;
   background-color: #fff;
}
.cover{
	width: 100%;
  height: 400rpx;
	position: relative;
}
.video-video {
    width: 100%;
    height: 400rpx;
}
.video-cover {
  width:100%;
  height: 400rpx;
	position: absolute;
	top: 0;
	left: 0;
	z-index: 99;
} 
.videoPlayBtn{
	position: absolute;
    width: 100rpx;
    height: 100rpx;
    top: 50%;
    left: 50%;
    margin: -50rpx 0 0 -50rpx;
	z-index: 100;
}

.title {
  font-size: 18px;
  line-height: 1.4;
  color: #333;
  padding: 0 30px;
  bottom: 20px;
  margin-top: 20rpx;
  text-align: center;
}

.excerpt {
  color: #999;
  font-size: 14px;
  padding: 5px 30px 20px;
  line-height: 1.6;
}
